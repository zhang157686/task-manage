# TaskMaster AI Backend Environment Configuration

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=taskmaster

# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/taskmaster

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Logging
LOG_LEVEL=INFO

# MCP Server Configuration
# Default API key for MCP server (optional - can also be set via init_project or passed as parameter)
MCP_DEFAULT_API_KEY=your-api-key-here
# API base URL for MCP server
MCP_API_BASE_URL=http://localhost:8000
# MCP server log level
MCP_LOG_LEVEL=INFO
# Default config file path for MCP client
MCP_CONFIG_FILE_PATH=~/.task-manager-mcp.json